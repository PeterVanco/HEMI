{
	// See http://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"options": {
		"cwd": "${workspaceRoot}/ui"
	},
	"tasks": [
		{
			"taskName": "install",
			"args": [
				"install"
			]
		},
		{
			"taskName": "update",
			"args": [
				"update"
			]
		},
		{
			"taskName": "test",
			"args": [
				"run",
				"test"
			]
		},
		{
			"taskName": "start",
			"args": [
				"run",
				"start"
			],
			"problemMatcher": "$tsc-watch"
		},
		{
			"taskName": "build",
			"args": [
				"run",
				"tsc"
			],
			"problemMatcher": "$tsc"
		},
		{
			"taskName": "watch",
			"args": [
				"run",
				"tsc:w"
			],
			"problemMatcher": "$tsc-watch"
		}
	]
}